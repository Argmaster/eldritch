{
    "semi": true,
    "useTabs": false,
    "endOfLine": "lf",
    "printWidth": 88,
    "overrides": [
        {
            "files": ["*.html", "*.js", "*.json", ".prettierrc"],
            "options": { "tabWidth": 4 }
        },
        {
            "files": ["*.md"],
            "options": { "proseWrap": "always", "tabWidth": 4 }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": { "tabWidth": 2 }
        }
    ]
}
